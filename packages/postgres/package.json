{
  "name": "@vercel/postgres",
  "version": "0.4.0",
  "description": "Connect to Vercel Postgres databases on the Edge",
  "homepage": "https://vercel.com",
  "repository": {
    "type": "git",
    "url": "https://github.com/vercel/storage.git",
    "directory": "packages/postgres"
  },
  "license": "Apache-2.0",
  "type": "module",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": {
        "edge-light": "./dist/index.js",
        "node": "./dist/index-node.js",
        "default": "./dist/index-node.js"
      },
      "require": {
        "edge-light": "./dist/index.cjs",
        "node": "./dist/index-node.cjs",
        "default": "./dist/index-node.cjs"
      }
    }
  },
  "main": "./dist/index.cjs",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "files": [
    "dist/*.js",
    "dist/*.cjs",
    "dist/*.d.ts"
  ],
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch --clean=false",
    "lint": "eslint \"src/**/*.ts\"",
    "prepublishOnly": "pnpm run build",
    "prettier-check": "prettier --check .",
    "publint": "npx publint",
    "test": "jest --env @edge-runtime/jest-environment .test.ts && jest --env node .test.ts",
    "type-check": "tsc --noEmit"
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node"
  },
  "dependencies": {
    "@neondatabase/serverless": "0.4.23",
    "bufferutil": "4.0.7",
    "utf-8-validate": "6.0.3",
    "ws": "8.13.0"
  },
  "devDependencies": {
    "@changesets/cli": "2.26.2",
    "@edge-runtime/jest-environment": "2.2.4",
    "@edge-runtime/types": "2.1.3",
    "@types/jest": "29.5.2",
    "@types/node": "18.16.18",
    "@types/ws": "8.5.5",
    "eslint": "8.43.0",
    "eslint-config-custom": "workspace:*",
    "jest": "29.5.0",
    "prettier": "2.8.8",
    "ts-jest": "29.1.1",
    "tsconfig": "workspace:*",
    "tsup": "7.1.0",
    "typescript": "5.1.6"
  },
  "engines": {
    "node": ">=14.6"
  }
}
